void getKeyInput3(){
  KeyReg10 = KeyReg9;
  KeyReg9 = KeyReg8;
  KeyReg8 = HAL_GPIO_ReadPin(DEC_GPIO_Port, DEC_Pin);
  if ((KeyReg9 == KeyReg8) && (KeyReg9 == KeyReg10)){
    if (KeyReg10 != KeyReg11){
      KeyReg11 = KeyReg10;

      if (KeyReg11 == PRESSED_STATE){
        TimeOutForKeyPress3 = 100;
        subKeyProcess3();
      }
    }else{
       TimeOutForKeyPress3 --;
        if (TimeOutForKeyPress3 == 0){
          KeyReg11 = NORMAL_STATE;
        }
    }
  }
}


